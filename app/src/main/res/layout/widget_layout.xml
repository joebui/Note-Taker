<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <GridLayout android:layout_width="match_parent" android:layout_height="50dp"
        android:background="@color/white">
        <TextView android:text="Note Taker" android:layout_gravity="left|center"
            android:textColor="@color/black" android:layout_marginLeft="@dimen/ten"
            android:textStyle="bold"/>

        <ImageView android:src="@drawable/ic_note_add_black_36dp" android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/ten" android:id="@+id/widget_add"/>
    </GridLayout>

    <ListView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/widgetList"/>
</LinearLayout>